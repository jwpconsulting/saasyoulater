{
    "name": "saas-you-later",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "typescript-language-server": "typescript-language-server",
        "svelteserver": "svelteserver",
        "dev": "vite dev --port 3000",
        "build": "vite build",
        "preview": "vite preview --port 3000",
        "test": "npm run check",
        "check": "npm run check:prettier && npm run check:eslint && npm run check:svelte-check && npm run check:vitest",
        "check:with-playwright": "npm run check && npm run check:playwright",
        "check:svelte-check": "svelte-check --tsconfig ./tsconfig.json",
        "check:prettier": "prettier --check .",
        "check:eslint": "eslint .",
        "check:vitest": "vitest run",
        "check:playwright": "playwright test",
        "check:playwright:install": "playwright install firefox",
        "format": "npm run fix:prettier",
        "fix": "npm run fix:prettier",
        "fix:prettier": "prettier --write ."
    },
    "dependencies": {
        "@sveltejs/adapter-auto": "^2.0.0",
        "@sveltejs/adapter-static": "^2.0.3",
        "@sveltejs/kit": "^1.27.4",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.31",
        "svelte": "^4.2.7",
        "tailwindcss": "^3.3.5",
        "tslib": "^2.4.1",
        "typescript": "^5.0.0, <5.3.0",
        "vite": "^4.4.2"
    },
    "devDependencies": {
        "@playwright/test": "^1.28.1",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-svelte": "^2.30.0",
        "prettier": "^3.0.0",
        "prettier-plugin-svelte": "^3.0.0",
        "svelte-check": "^3.6.0",
        "svelte-language-server": "^0.16.1",
        "typescript-language-server": "^4.1.2",
        "vitest": "^0.32.2"
    },
    "type": "module"
}
